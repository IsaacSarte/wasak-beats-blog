<%# Header %>

<%= render 'header' %>

<%# End of Header %>

<div class="index-private">

  <div class="index-private-songs">

    <h1 class="index-main-text">Your Songs</h1>

    <div class="index-private-songs-main">

      <% @songs.each do |song| %>

        <%= link_to edit_song_path(song) do %> <%# Link to Edit %>

        <div class="index-private-songs-card">
        
          <div class="index-title">
            <p class="index-p-title">🎶 Title: <%= song.title %></p>
          </div>
          
          <br/>

          <p class="index-p-desc">📝 Description: </p>
          <div class="index-description">
            <%= song.description %>
          </div>

        </div>

          <br/> <br/>

        <% end %>

      <% end %>

    </div>

  </div>

</div>
