<%# Header %>

    <header class="header-home sticky top-0 flex justify-center items-center gap-10 py-8 custom:flex-col">

        <span class="header-span text-4xl">Wasak Beats Blog</span>
        
        <nav>
            <ul class="nav_links flex gap-5 text-xl custom:text-xl gap-4">
                <li class="hover:border-b-2 hover:border-b-fuchsia-600 text-fuchsia-400"><a href="/">Home</a></li>
                <li class="hover:border-b-2 hover:border-b-fuchsia-600"><%= link_to "Blog", posts_path %></li>
                <li class="hover:border-b-2 hover:border-b-fuchsia-600"><%= link_to "Create Lyrics", songs_path %></li>
